@model RegalosWeb.Models.Regalo

@{
    ViewBag.Title = "Agregar";
}

<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <title>Agregar Regalo</title>
    <meta charset="utf-8" />
</head>
<body>
    <h1>Agregar Regalo</h1>

    <table>

        @using (Html.BeginForm())
        {
            <tr>
                <td>Pareja</td>
                <td>
                    @Html.LabelFor(model => model.IdP, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.DropDownList("idP", (SelectList)ViewBag.cboPareja, "Pareja")
                    </div>
                </td>
            </tr>

            <tr>
                <td>Articulo</td>
                <td>
                    @Html.LabelFor(model => model.IdA, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.DropDownList("idA", (SelectList)ViewBag.cboArticulo, "Articulo")
                    </div>
                </td>
            </tr>

            <tr><td><input type="submit" value="Agregar" /></td></tr>
        }

    </table>
</body>
</html>